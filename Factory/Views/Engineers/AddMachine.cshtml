@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer;
<div class="Container">
  <div class="jumbotron">
    <h1>Add a Machine</h1>
  </div>


  <h4>Add a Machine to this Engineer: @Html.DisplayFor(model => model.Name)</h4>

  @using (Html.BeginForm())
  {
      @Html.HiddenFor(model => model.EngineerId)

      @Html.Label("Select an Machine")
      @Html.DropDownList("MachineId")

      <input type="submit" value="Save" />
  }

  <p>@Html.ActionLink("Back to Engineer", "details", new {id = Model.EngineerId})</p>

</div>

